<h1>Editing Book</h1>
<%= form_for(@post) do |f| %>
	<p class="edit-headline">Title</p>
	<%= f.text_field :title, class: "book_title" %>
	<p class="edit-headline">Body</p>
	<%= f.text_area :body, class: "book_body" %><br>
<%= f.submit 'Update Book' %>
<% end %>

<p>
<%= link_to "show", post_path , class: "show_#{@post.id}" %> |
<%= link_to "Back", '/posts', class: "back" %>
</p>